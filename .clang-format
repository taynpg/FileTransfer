BasedOnStyle: LLVM
IndentWidth: 4
PointerAlignment: Left
AccessModifierOffset: -4
ReflowComments: Always
SpacesBeforeTrailingComments: 3
BreakBeforeBraces: Custom
BraceWrapping:
    AfterFunction: true
    AfterClass: true
TabWidth: 4
ColumnLimit: 150
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<.*>'
    Priority: 1
  - Regex: '^".*"'
    Priority: 2